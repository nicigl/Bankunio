}

if ((Geld==85) && (coinsValue == 8,5))   
{
  myservo.write(180);
  myservo2.write(180);
  delay(4000);
  myservo.write(90);
  myservo2.write(91); 
  Geld=0;
}

if ((Geld==90) && (coinsValue == 9,0))  
{
  myservo.write(180);
  myservo2.write(180);
  delay(4000);
  myservo.write(90);
  myservo2.write(91); 
  Geld=0;
}

if ((Geld==95) && (coinsValue == 9,5))  
{
  myservo.write(180);
  myservo2.write(180);
  delay(4000);
  myservo.write(90);
  myservo2.write(91); 
  Geld=0;
}

if ((Geld==100) && (coinsValue == 10,0))  
{
  myservo.write(180);
  myservo2.write(180);
  delay(4000);
  myservo.write(90);
  myservo2.write(91); 
  Geld=0;
}
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Transaktion");
  lcd.setCursor(0,1);
  lcd.print("abgeschlossen");
  delay(1000);
  lcd.clear();
  lcd.print(Geld);  
  lcd.setCursor(4,0);
  lcd.print("Remstali");

}

if (var==0)
{    
  buttonState = digitalRead(buttonPin);
  myservo.write(180);
  myservo2.write(0);  
  delay(0);                          
} 

if (var==1)
{    
  buttonState = digitalRead(buttonPin);
  myservo.write(90);
  myservo2.write(91); 
  delay(0);       
} 

}
